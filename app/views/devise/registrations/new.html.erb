<div class='col-md-10 col-md-offset-1 yieldcontent'>
  <div class="row">
    <div class="col-xs-12">
      <div class="jumbotron jumboart text-center">
          <h2 class="welcome">REGISTRATION</h2>
      </div>
      <div class="app-form-pad">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "app-form" }) do |f| %>
        <%= devise_error_messages! %>
          <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Email</div>
                        <%= f.email_field :email, autofocus: true, class: "form-control" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Password</div>
                          <% if @validatable %>
                            <% passPlaceholder = "min #{@minimum_password_length} characters" %>
                          <% end %>
                        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: passPlaceholder %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Confirm Password</div>
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                    </div>
                </div>
                <div class="">
                  <%= f.submit "Register", class: "btn btn-default" %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
