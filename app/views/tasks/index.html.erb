<div>
  <h2>Tasks INDEX</h2>
</div>

  <%= link_to 'New task', new_task_path %>

<div>
  <div>
    <% link_to %>
    <p>The size is: <%= @tasks.size %></p>
    <p>The Current User size is: <%= current_user.tasks.size %></p>
    <p>The Current User email is: <%= current_user.email %></p>
    <p>Lets find task: <%= @tasks %></p>
    <p>Lets find email from task: <%= @tasks %></p>
    <p>Lets find users: </p>
      <% @users.each do |user| %>
        <%= user.email %> <br />
      <% end %>

    <ul>
      <p>Lets find current_user`s tasks:</p>
      <% current_user.tasks.uniq.each do |task| %>
        <li> <%= task.title %> </li>
        <li> <%= task.description %> </li>
        <li>
          <% task.owners.each do |owner| %>
            <%= owner %>
          <% end %>
        </li>
        <%= link_to 'Show', task %>
        <%= link_to 'Edit', edit_task_path(task) %>
        <%= link_to 'Delete', task_path(task), method: :delete %>
        <br>
        <br>
      <% end %>
    </ul>
  </div>

</div>