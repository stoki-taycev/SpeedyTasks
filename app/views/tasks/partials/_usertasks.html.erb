<% current_user.tasks.uniq.reverse.each do |task| %>
  <div class="panel panel-default panel-wrapper">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-8">
            <strong>
              <h3 class="panel-title"><%= task.title %></h3>
            </strong>
          </div>
          <div class="col-xs-4 text-right">
            <h3 class="panel-title">
              <span>
                <%= link_to edit_task_path(task), class: "btn btn-warning btn-xs" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
              </span>
              <span>
                <%= link_to task_path(task), method: :delete, class: "btn btn-danger btn-xs" do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <% end %>
              </span>
            </h3>
          </div>
        </div>
      </div>

      <%= link_to task do %>
        <div class="panel-body">
          <%= task.description %>
        </div>
      <% end %>

      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-10">
            <% task.owners.uniq.each do |owner| %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"><span class="owner-email"> <%= owner %></span></span>
            <% end %>
          </div>
          <div class="col-xs-2 text-right">
            <span>
              <%= link_to task_share_path(task), class: "btn btn-info btn-xs" do %>
                share&nbsp;<span class="glyphicon glyphicon-share" aria-hidden="true"></span>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

